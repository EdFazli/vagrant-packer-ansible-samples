{
    "variables": {
          "region":"ap-southeast-1",
          "ami_name": "Ubuntu_Nginx_AMI",
          "ssh_username": "ubuntu",
          "ami_description": "Ubuntu for Nginx AMI",
          "access_key": "",
          "secret_key": ""
    },

    "sensitive-variables": ["access_key", "secret_key"],
    
    "builders": [
        {
            "type": "amazon-ebs",
            "access_key": "{{user `access_key`}}",
            "secret_key": "{{user `secret_key`}}",
            "region": "{{user `region`}}",
            "ami_name": "{{user `ami_name`}}",
            "ami_description": "{{user `ami_description`}}",
            "source_ami_filter": {
                "filters": {
                  "virtualization-type": "hvm",
                  "name": "ubuntu/images/hvm-ssd/ubuntu-focal-20.04-amd64*",
                  "root-device-type": "ebs"
                },
                "most_recent": true,
                "owners": "099720109477"
              },
            "instance_type": "t2.micro",
            "ssh_username": "{{user `ssh_username`}}",
            "tags": {
                "Name": "{{user `ami_name`}}",
                "OS_Version": "Ubuntu Server 20.04 LTS",
                "Release": "Latest",
                "Base_AMI_Name": "{{ .SourceAMIName }}"
              }
        }
    ],

    "provisioners": [
        {
            "type": "shell",
            "inline": ["sleep 30", "sudo apt update -y", "sudo apt install nginx -y"]
        }
    ],

    "post-processors": [
        {
            "type": "manifest",
            "output": "{{user `ami_name`}}_out.json"
        }
    ]

}